        android:supportsRtl="true"
        android:theme="@style/Theme.SkilledLabour.NoActionBar"
        tools:targetApi="31">
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
<!--        admin activities-->
        <activity android:name=".activities.CreateAccountActivity"/>
        <activity android:name=".activities.Admin.DashboardAdminActivity"/>
        <activity android:name=".activities.Admin.LabourDetails"/>
        <activity android:name=".activities.Admin.SkillsActivity"/>
        <activity android:name=".activities.Admin.LaboursListActivity"/>
        <activity android:name=".activities.Admin.AllBookingsActivity"/>
        <activity android:name=".activities.Admin.CustomersListActivity"/>
        <activity android:name=".activities.Admin.QueriesActivity"/>
        <activity android:name=".activities.Admin.CustomerDetails"/>

        <!--        user activities-->
        <activity android:name=".activities.Customer.DashboardUserActivity"/>
        <activity android:name=".activities.Customer.MybookingsActivity"/>
        <activity android:name=".activities.Customer.FindSpecialistActivity"/>
        <activity android:name=".activities.Customer.LabourDetails"/>
        <activity android:name=".activities.Customer.ALlLaboursActivity"/>

        <!--        Labour Activities-->
        <activity android:name=".activities.Labour.DashboardLabourActivity"/>
        <activity android:name=".activities.Labour.MyAvailability"/>
        <activity android:name=".activities.Labour.MyJobsActivity"/>
    </application>
</manifest>